<section id="blog">

    <div class="blog-heading">
        <span>My Recent posts</span>
        <h3>My Blogs</h3>
    </div> 

    <div class="blog-container">
        {{#if dbError}}
            <div>
                Sorry, there was a problem with the database:<br />
                {{theError}}
            </div>   
        {{else}}
        {{#each blog}}
            <div class="blog-box">
                <div class="blog-img">
                    <img src="{{blog_image}}" alt="blog">
                </div>

                <div class="blog-text">
                    <span>{{blog_date}}</span>
                    <a class="blog-title">{{blog_title}}</a>
                    <p>{{blog_desc}}</p>
                     {{#if ../isAdmin}}
                        <div>
                            <a href="/blogs/update/{{blog_id}}"> Modify </a> - <a href="/blogs/delete/{{blog_id}}" class="important"> Delete </a>
                        </div>
                    {{/if}}
                </div>
            </div>
            
        {{/each}}
        {{/if}}
        {{#if isAdmin}}
        <div class="blog-box">
            <a href="/blogs/new">
                <div class="blog-imgnew">
                    <img src="/img/plusicon.png" alt="blog">
                </div>
            </a>

            <div class="blog-text">
                <a class="blog-title-new" href="/blogs/new">Add a new Blog!</a>
            </div>
        </div>
        {{/if}}
    </div>
</section>

