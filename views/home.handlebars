<section id="blog">

    <div class="blog-heading">
        <h3>Cameron Alexander</h3>
        <span>My CV</span>
        <br />
        <img src="/img/MyImage.jpg" alt="">
    </div> 
</section>

<div class="container">
    <div class="section">
        <div class="section-title">
            Summary
        </div>
        <div class="section-content">
            <p>This is my CV which consists of my skills, Information, education, qualifications and work Experience.</p>
        </div>
    </div>
</div>

<section id="blog">
    <div class="blog-container">  
        {{#if dbError}}
            <div>
                Sorry, there was a problem with the database:<br />
                {{theError}}
            </div>   
        {{else}}
        {{#each cv}}
        <div class="blog-box">
            <div class="blog-img">
                <img src="{{cv_image}}" alt="icon">
            </div>

            <div class="blog-text">
                <a class="blog-title">{{cv_title}}</a>
                <p>{{cv_desc}}</p>
                {{#if ../isAdmin}}
                    <div>
                        <a href="/home/update/{{cv_id}}"> Modify </a> - <a href="/home/delete/{{cv_id}}" class="important"> Delete </a>
                    </div>
                {{/if}}
            </div>
        </div>
        {{/each}}
        {{/if}}

        {{#if isAdmin}}
        <div class="blog-box">
            <a href="/home/new">
                <div class="blog-img">
                    <img src="/img/plusicon.png" alt="blog">
                </div>
            </a>

            <div class="blog-text">
                <a class="blog-title-new" href="/home/new">Add a new CV</a>
            </div>
        </div>
        {{/if}}

    </div>
</section>
